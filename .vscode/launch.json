  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch harness",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}/cmd/harness",
      "program": "${workspaceFolder}/cmd/harness/main.go"
    },
    {
      "name": "Launch api server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}/cmd/api",
      "program": "${workspaceFolder}/cmd/api/main.go"
    },
    {
      "name": "Launch Golang",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "env": {},
      "args": []
    },
    {
      "name": "Connect to delve server",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true,
      "substitutePath": [
        {
          "from": "${workspaceFolder}/cmd",
          "to": "/src"
        }
      ]
    },
    {
      "name": "Python Debugger: Attach",
      "type": "debugpy",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "args": ["-o", "/Users/nickgobern/Documents/apeman/test/"],
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}", // Maps C:\Users\user1\project1
          "remoteRoot": "." // To current working directory ~/project1
        }
      ]
    }
  ]
}
